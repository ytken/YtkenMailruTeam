<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginVertical="10dp"
    android:background="@color/post_background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/feed_task_your_employee_prof_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_task_def_prof_pic_face" />

        <TextView
            android:id="@+id/feed_task_your_employer_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Author_name"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/feed_task_your_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:maxLines="1"
                android:text="post_title"
                android:textSize="30sp" />
        </HorizontalScrollView>

        <TextView
            android:id="@+id/feed_task_your_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_weight="3"
            android:maxLines="4"
            android:text="Task_description"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/feed_task_deadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="3333"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/feed_task_is_done_btn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/feed_task_is_finished_btn_text"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>